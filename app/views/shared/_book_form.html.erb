<%= form_for(@book) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <ul id="book_form">
    <%= f.text_field :title,  placeholder: "Title of book" %>
    <%= f.text_field :author, placeholder: "Author of book" %>
    <%= f.submit "Add book", class: "btn btn-primary" %>
  </ul>
<% end %>