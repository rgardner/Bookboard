<%= form_for(@book) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :title,  placeholder: "Title of book" %>
    <%= f.text_field :author, placeholder: "Author of book" %>
  </div>
  <%= f.submit "Add book", class: "btn btn-large btn-primary" %>
<% end %>