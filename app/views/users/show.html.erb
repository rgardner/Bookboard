<% provide(:title, @user.name) %>
<div class="row">
    <aside class="span3">
        <section>
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
        <section>
          <h3>Booklists</h3>
          <p>Nothing to see here yet...</p>
        </section>
    </aside>
    <div class="span9">
      <h3>Books (<%= @user.books.count %>)</h3>
      <%= render 'shared/book_form' if current_user?(@user) %>
      <% if @user.books.any? %>
        <ol class="books">
          <%= render @user.books %>
        </ol>
      <% end %>
    </div>
</div>